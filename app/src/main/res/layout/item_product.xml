<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Favorite Icon -->
        <ImageView
            android:id="@+id/ivFavorite"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_heart_outline"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="4dp" />

        <!-- Product Image -->
        <ImageView
            android:id="@+id/ivProductImage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/ivFavorite"
            android:scaleType="centerInside"
            android:background="#FFFFFF"
            android:contentDescription="Product Image"
            android:layout_marginTop="8dp" />

        <!-- Product Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivProductImage"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            <!-- Product Name -->
            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Burger Gà Giòn"
                android:textColor="#2D2D2D"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Product Description -->
            <TextView
                android:id="@+id/tvProductDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Burger gà chiên giòn với sốt đặc biệt"
                android:textColor="#757575"
                android:textSize="11sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="4dp" />

            <!-- Price -->
            <TextView
                android:id="@+id/tvProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45.000 VNĐ"
                android:textColor="#FF6F3D"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnViewDetails"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:text="Xem Chi Tiết"
                    android:textColor="#4CAF50"
                    android:textSize="11sp"
                    android:background="@drawable/btn_white_rounded"
                    android:layout_marginBottom="6dp" />

                <Button
                    android:id="@+id/btnAddToCart"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:text="Thêm Vào Giỏ"
                    android:textColor="#FF6F3D"
                    android:textSize="11sp"
                    android:background="@drawable/btn_white_rounded" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>

